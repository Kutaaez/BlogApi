    {
      "key": "token",
      "value": ""
    },
    {
      "key": "savedCategoryId",
      "value": ""
    },
    {
      "key": "savedThreadId",
      "value": ""
    },
    {
      "key": "savedUserId",
      "value": "7"
    }
  ]
