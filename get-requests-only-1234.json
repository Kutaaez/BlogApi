    {
      "name": "Reviews & Likes get",
      "item": [
        {
          "name": "Get Reviews (All)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/reviews",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "reviews"
              ]
            }
          }
        },
        {
          "name": "Get Reviews for Thread",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/reviews?threadId={{savedThreadId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "reviews"
              ],
              "query": [
                {
                  "key": "threadId",
                  "value": "{{savedThreadId}}"
                }
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
